<?xml version="1.0" encoding="UTF-8"?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cp.Menu.TopMenu"
    BackgroundColor="White">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="60"/>
    </Grid.RowDefinitions>


    <Button Grid.Row="1" Style="{StaticResource buttonStyle}" Grid.Column="0" Text="Send"  Command="{Binding SendPageCommand}" />
    <Button Grid.Row="1" Style="{StaticResource buttonStyle}" Grid.Column="1" Text="Receive" Command="{Binding ReceivePageCommand}" />
    <Button Grid.Row="1" Style="{StaticResource buttonStyle}" Grid.Column="2" Text="History" Command="{Binding HistoryPageCommand}"/>
    <Button Grid.Row="1" Style="{StaticResource buttonStyle}" Grid.Column="3" Text="Store" Command="{Binding BuynsellPageCommand}"/>
    <Button Grid.Row="1" Style="{StaticResource buttonStyle}" Grid.Column="4" Text="Menu" Command="{Binding MenuToggleCommand}"/>



</Grid>
